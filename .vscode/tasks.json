{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "command": "cargo",
            "type": "shell",
            "args": [
                "run"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "native build",
            "command": "cargo",
            "type": "shell",
            "args": [
                "build",
                "--bin",
                "horizon-native"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "wasm-bindgen",
            "command": "wasm-bindgen",
            "args": [
                "--out-dir",
                "target/generated",
                "--web",
                "./target/wasm32-unknown-unknown/debug/horizon.wasm"
            ]
        },
        {
            "label": "wasm-build",
            "command": "cargo",
            "type": "shell",
            "args": [
                "build",
                "--lib",
                "--target",
                "wasm32-unknown-unknown"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "wasm",
            "dependsOrder": "sequence",
            "dependsOn": [
                "wasm-build",
                "wasm-bindgen"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "wasm-build-release",
            "command": "cargo",
            "type": "shell",
            "args": [
                "build",
                "--lib",
                "--target",
                "wasm32-unknown-unknown",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "wasm-release",
            "dependsOrder": "sequence",
            "dependsOn": [
                "wasm-build-release",
                "wasm-bindgen-release"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "wasm-bindgen-release",
            "command": "wasm-bindgen",
            "args": [
                "--out-dir",
                "target/generated",
                "--web",
                "./target/wasm32-unknown-unknown/release/horizon.wasm"
            ]
        },
        {
            "label": "start server",
            "dependsOn": "wasm",
            "command": "simple-http-server",
            "args": [
                "-i",
                "target/generated"
            ],
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ],
    "options": {
        "env": {
            "RUSTFLAGS": "--cfg=web_sys_unstable_apis",
        }
    }
}